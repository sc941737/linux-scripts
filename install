#!/bin/bash

general="general scripts"
config="bash configurations and aliases"
kali="Kali scripts"
dev="development scripts"
dirPath=$(find $HOME/ -name linux-scripts)

function prompt(){
	$dirPath/general/yes-no-loop "$1"
}

function copymsg(){
	echo "Copying all $1."
}

function donemsg(){
	echo "Done"
}

function cpdir(){
	copymsg "$1"
	sudo cp -r $dirPath/$2/. /usr/local/bin/
	donemsg
}

function cpgeneral(){
	cpdir "$general" general
}

function cpconfig(){
	copymsg "$config" 
	sudo cp -r $dirPath/config/. $HOME/
	donemsg
}

function changeInterface(){
	echo "Enter a new interface name:" #TODO restrict input to a single word
	read interface && $dirPath/kali-pen-test/intconfig $interface
}

function cpkali(){
	prompt "$kali are configured to use interface called 'wlan0' by default. Would you like to change the name of the interface? (y/n)" && changeInterface || echo "Default interface left unchanged."
	cpdir "$kali" kali-pen-test
}

function run(){
	prompt "Would you like to install $1? (y/n)" && $2 || echo "Skipping."
}

if [ ! -z $1 ] && [ $1 == "--dev" ]
then
	cpdir "$dev" dev
	cpconfig
	cpgeneral
	cpkali
else
	run "$config" cpconfig
	run "$general" cpgeneral
	run "$kali" cpkali
fi

echo "All done."

exit
